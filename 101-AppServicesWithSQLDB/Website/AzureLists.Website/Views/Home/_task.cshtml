@{
    ViewBag.Title = "Azure Lists";
}
@model AzureLists.Website.Models.Api.Task

<!-- Page Content Holder -->
@if (!string.IsNullOrWhiteSpace(Model.Id))
{
<div id="task">

    @using (Html.BeginForm("Update", "Task", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <input name="Id" type="hidden" value="@Model.Id">
        <div class="task-edit-header">
            <div class="form-group">
                <a class="btn btn-default btn-xs btn-task-complete pull-left"><span class="glyphicon glyphicon-ok"></span></a>
                <textarea rows="2" class="blend pull-left">@Model.Title</textarea>
                <a class="btn btn-xs btn-task-important pull-left @(Model.Important ? "btn-danger":"btn-default")"><span class="glyphicon glyphicon-star"></span></a>
            </div>
            <div class="clear-fix"></div>
        </div>
        <div class="task-edit-body">



            <div class="form-group">
                <label>Due</label>
                <input type="datetime" id="datepicker" class="form-control datepicker" />
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Notes</label>
                <textarea class="form-control ">@Model.Notes</textarea>
            </div>


            <button type="submit" class="btn btn-default hideTask pull-right">
                <span class="glyphicon glyphicon-ok"></span>

            </button>
            <a class="btn btn-default hideTask pull-right">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>

        </div>
    }
</div>
}
